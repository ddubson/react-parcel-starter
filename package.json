{
  "name": "react-parcel-starter",
  "version": "1.0.0",
  "description": "React with Parcel bundler starter kit",
  "main": "index.js",
  "scripts": {
    "start": "parcel src/index.html",
    "build": "parcel build src/index.html",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddubson/react-parcel-starter.git"
  },
  "keywords": [
    "starter"
  ],
  "author": "Dmitriy Dubson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ddubson/react-parcel-starter/issues"
  },
  "homepage": "https://github.com/ddubson/react-parcel-starter#readme",
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@types/enzyme": "^3.10.1",
    "@types/jest": "^24.0.15",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "enzyme-react-16-adapter-setup": "^0.1.0",
    "jest": "^24.5.0",
    "parcel": "^1.12.3",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "enzyme-react-16-adapter-setup"
    ],
    "testRegex": "(/test/.*|(\\.|/)(test))\\.(test.tsx?)$",
    "testPathIgnorePatterns": [
      "/dist/"
    ]
  }
}
