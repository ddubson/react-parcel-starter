{
  "name": "react-parcel-starter",
  "version": "1.0.0",
  "description": "React with Parcel bundler starter kit",
  "main": "index.js",
  "scripts": {
    "start": "parcel src/index.html",
    "build": "parcel build src/index.html",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddubson/react-parcel-starter.git"
  },
  "keywords": [
    "starter"
  ],
  "author": "Dmitriy Dubson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ddubson/react-parcel-starter/issues"
  },
  "homepage": "https://github.com/ddubson/react-parcel-starter#readme",
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@testing-library/react": "^9.4.1",
    "babel-jest": "^25.1.0",
    "jest": "^25.1.0",
    "parcel": "^1.12.4"
  },
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/react"
    ],
    "plugins": [
      [
        "@babel/transform-runtime",
        {
          "regenerator": true
        }
      ]
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testRegex": "(/test/.*|(\\.|/)(test))\\.(test.jsx?)$",
    "testPathIgnorePatterns": [
      "/dist/"
    ]
  }
}
