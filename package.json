{
  "name": "react-parcel-starter",
  "version": "1.0.0",
  "description": "React with Parcel bundler starter kit",
  "main": "index.js",
  "scripts": {
    "start": "parcel src/index.html",
    "build": "parcel build src/index.html",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddubson/react-parcel-starter.git"
  },
  "keywords": [
    "starter"
  ],
  "author": "Dmitriy Dubson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ddubson/react-parcel-starter/issues"
  },
  "homepage": "https://github.com/ddubson/react-parcel-starter#readme",
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "^7.0.0",
    "babel-jest": "^24.5.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "enzyme-react-16-adapter-setup": "^0.1.0",
    "jest": "^24.5.0",
    "parcel": "^1.12.3"
  },
  "dependencies": {
    "@types/react": "^16.8.10",
    "@types/react-dom": "^16.8.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/react"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "enzyme-react-16-adapter-setup"
    ],
    "testRegex": "(/test/.*|(\\.|/)(test))\\.(test.jsx?)$",
    "testPathIgnorePatterns": [
      "/dist/"
    ]
  }
}